mixin accordionComponent(items)
    .accordionComponent
        each item, i in items
            - var id = 'content_' + Math.floor(Math.random() * 1000000) + '_' + i
            .accordion
                button.accordion-title(
                    aria-expanded="false"
                    aria-controls=id
                )
                    != item.title
                
                .accordion-content(id=id)
                    != item.bodyAccordion