mixin component-keenSlider(id, slides=[], options={})
    - const hasArrows = options && options.arrows !== false
    - const hasDots = options && options.dots !== false
    - const className = options && options.className ? options.className : ''
    - const extraAttrs = (options && options.attrs) || {}
    - var breakpointsStr = options.breakpoints ? JSON.stringify(options.breakpoints).replace(/"/g, '&quot;') : undefined


    //- Container
    .component-keen-slider(
        id=id
        class='keen-slider'
        data-loop=(options.loop ? 'true' : 'false')
        data-autoplay=(options.autoplay ? 'true' : 'false')
        data-per-view=(options.perView || null)
        data-spacing=(options.spacing || null)
        data-breakpoints=breakpointsStr
        data-animation-type=(options.animationType || null)
    )
        .boxLoading
            .imgLoading
        //- Slides via array
        if slides && slides.length > 0 && !block
            each slide in slides
                .keen-slider__slide
                    if slide.content
                        = slide.content
                    else if slide.imageDesk || slide.imageMob
                        a(
                            href=slide.link 
                            target=''
                            rel='noopener'
                            data-creative=slide.dataCreative
                            data-name=slide.dataName
                            style='display:block;width:100%;height:100%;'
                            onclick='sendClickEventGA(this)'
                        )
                            picture
                                if slide.imageMob
                                    source(srcset=slide.imageMob, media='(max-width: 768px)')
                                if slide.imageDesk
                                    source(srcset=slide.imageDesk, media='(min-width: 769px)')
                                img(
                                    src=slide.imageDesk || slide.imageMob
                                    alt=slide.alt
                                    style='width:100%;height:auto;display:block;'
                                )

        //- Conteúdo inserido pelo bloco
        if block
            block

        //- Setas (fora do container component-keen-slider)
        if hasArrows
            .wrapper-arrow-left
                button.ks-arrow.ks-arrow--prev(type='button' aria-label='Anterior')
                    img(src='data:image/svg+xml;base64,', alt='')
            .wrapper-arrow-right
                button.ks-arrow.ks-arrow--next(type='button' aria-label='Próximo')
                    img(src='data:image/svg+xml;base64,', alt='')

        //- Dots (fora do container component-keen-slider)
        if hasDots
            .ks-dots